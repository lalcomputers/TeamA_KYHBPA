@model KYHBPA_TeamA.Models.AddPhotoViewModel

@{
    ViewBag.Controller = "Photos";
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="jumbotron common-BodyText"> 
    <h4>
        Follow these guidelines when uploading images to the website.
    </h4>
    <p>
        If the image is for the Landing Page Carousel:
        <ul>
            <li>
                Dimension is 1920 x 800
            </li>
            <li>
                The description is what is displayed on the banner of the carousel image;
                so ensure that it isn't too long.
            </li>
        </ul>

        If the image is a Partner Organization:
        <ul>
            <li>
                Dimension is 125 x 125
            </li>
            <li>
                If using a link, the link must begin with "http://www." and end with ".com".
            </li>
        </ul>


        All images uploaded to the website should be compressed beforehand
        so it is optimized for web use.
    </p>
</div>



@using (Html.BeginForm("Create","Photo",FormMethod.Post, new { enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal common-BodyText">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @* Title *@
        <div class="form-group common-BodyText">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        @* Description *@
        <div class="form-group common-BodyText">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        @* InLandingPageCarousel *@
        <div class="form-group common-BodyText">
            @Html.LabelFor(model => model.InLandingPageCarousel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-1">
                @Html.EditorFor(model => model.InLandingPageCarousel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InLandingPageCarousel, "", new { @class = "text-danger" })
            </div>
        </div>

        @* IsPartnerOrg *@
        <div class="form-group common-BodyText">
            @Html.LabelFor(model => model.InPartnerOrgCarousel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-1">
                @Html.EditorFor(model => model.InPartnerOrgCarousel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InPartnerOrgCarousel, "", new { @class = "text-danger" })
            </div>
        </div>

        @* InPhotoGallery *@
        <div class="form-group common-BodyText">
            @Html.LabelFor(model => model.InPhotoGallery, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-1">
                @Html.EditorFor(model => model.InPhotoGallery, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InPhotoGallery, "", new { @class = "text-danger" })
            </div>
        </div>

        @* Link *@
        <div class="form-group common-BodyText">
            @Html.LabelFor(model => model.Link, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Link, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
            </div>
        </div>

        @* Credit *@
        <div class="form-group common-BodyText">
            @Html.LabelFor(model => model.Credit, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Credit, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Credit, "", new { @class = "text-danger" })
            </div>
        </div>

        @*File Upload*@
        <div class="form-group common-BodyText">
            @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="Col-md-10">
                <input type="file" accept="image/*" name="image" id="file" />
            </div>
        </div>
             

        <div class="form-group common-BodyText">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Admin")
</div>

