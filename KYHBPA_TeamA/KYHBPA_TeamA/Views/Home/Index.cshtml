@model KYHBPA_TeamA.Models.PhotoGalleryViewModel

@{
    ViewBag.Title = "Home Page";
}


<div class="jumbotron">
    <h1><b>Horsemen Helping Horsemen</b></h1>
    <p>Welcome to the Kentucky Horsemen's Benevolent and Protective Association, where the horsemen of Kentucky come together to work on the betterment of racing on all levels.</p>
    <p><a href="/Home/About" class="btn btn-primary btn-lg">Learn more about our History &raquo;</a></p>
</div>

<!--Image Gallery-->
@Html.Action("_ImageGallery", "Photo")

<hr />
<!--Triple Threat Column Layout -->
<div class="row">
    <div class="col-md-4">
        <h2 class="text-center"><u>Twitter</u></h2>
        <p class="text-center">
            <a class="twitter-timeline" href="https://twitter.com/KyHBPA?ref_src=twsrc%5Etfw" data-height="600" data-width="340">Tweets by KyHBPA</a>
            <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
        </p>
    </div>
    <div id="Join" class="col-md-4">
        <h2 class="text-center"><u>How to Join</u></h2>
        <p class="text-center">You are invited to drop into the HBPA office to meet the staff and learn more about current projects and how you can get involved in helping to improve the industry. There are no membership fees. Remember – This is your organization. Become an active participant and one of the “Horsemen Helping Horseman”.</p>
        <p class="text-center"><a href="/Home/About" class="btn btn-primary btn-lg">Join Here! &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2 class="text-center"><u>Facebook</u></h2>
