@model IEnumerable<KYHBPA_TeamA.Models.DisplayPostsViewModel>

@{
    ViewBag.Title = "News and Blogs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>
        Our latest news and blogs
    </h2>


@foreach (var post in Model)
{
    <div class="row postRow">
        <div itemscope itemtype="http://schema.org/Article">
            <div class="col-md-4 postImgArea">
                <img itemprop="image" class="img-thumbnail" src="@Url.Action("GetBlogThumbnail", "Blog", new { post.Id })" />
            </div>
            <div class="col-md-5">
                <h4 itemprop="headline" id="postTitle">
                    @post.Title
                </h4>
                <p itemprop="articleSection" class="postShortDescription">
                    @post.ShortDescription
                </p>
            </div>
            <div class="col-md-3">
                <div class="postDetails">
                    <h6 itemprop="datePublished">
                        @post.PostedOn.ToLongDateString()   <span class="seperator"> / </span> @post.Comments.Count Comments
                    </h6>
                </div>
                @Html.ActionLink("Read", "Read", "Blog", new { postId = post.Id }, new { @class = "common-ButtonVariant pull-right", @itemprop = "url" })
            </div>
            <span itemprop="author" itemscope itemtype="http://schema.org/Person">
                <meta itemprop="name" content="Kentucky HBPA">
            </span>
            <div itemprop="publisher" itemscope itemtype="https://schema.org/Organization">
                <div itemprop="logo" itemscope itemtype="https://schema.org/ImageObject">
                    <meta itemprop="url" content="http://kentuckyhbpa.org/Content/logoForKyhbpa3.png">
                    <meta itemprop="width" content="400">
                    <meta itemprop="height" content="60">
                </div>
                <meta itemprop="name" content="Kentucky HBPA">
            </div>
        </div>
    </div>
}




