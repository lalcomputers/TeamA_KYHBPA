<!DOCTYPE html>
<html>
<head>
    <link rel="shortcut icon" href="/Content/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/Content/favicon.ico" type="image/x-icon">
    @*<meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">*@
    <title>@ViewBag.Title - Kentucky HBPA</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container" id="fluid">
        <div class="navbar navbar-inverse navbar-fixed-top">
            @*<div onscroll="logoScroll()">
                    <div class="logoshadow"></div>
                    <img class="logoimage" href="~/Home/Index" src="~/Content/Logo.png" width="150" height="10" alt="KYHBPA" />
                </div>*@
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div id="brandArea" style="height:50px; width:80px;">
                    <img class="hideMe" src="~/Content/logoForKyhbpa3.png" id="brandLogo" />
                    @Html.ActionLink("KYHBPA", "Index", "Home", new { area = "" }, new { @class = "showMe brandText" })
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="/Home/About">
                            About Us
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu"> 
                            <li>@Html.ActionLink("Learn More", "About", "Home")</li>
                            <li>@Html.ActionLink("Our Board", "Index", "BoardOfDirectors")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="/Home/About">
                            Membership
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Become a Member", "Membership", "Home")</li>
                            <li>@Html.ActionLink("Benefits", "Benefits", "Home")</li>
                            <li>@Html.ActionLink("Polls", "Polls", "Home")</li>
                            <li>@Html.ActionLink("Documents", "Index", "Document")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="/Home/About">
                            News
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Events", "Index", "Event")</li>
                            <li>@Html.ActionLink("Blogs", "Index", "Blog")</li>
                            <li>@Html.ActionLink("Racing Education", "GamblingEducation", "Home")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Photo Gallery", "Index", "Photo")</li>
                    <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                </ul>

                @Html.Partial("_LoginPartial")

            </div>
        </div>
    </div>

    @RenderSection("ImageGallery", required: false)

    <div class="container body-content">
        @RenderBody()
        @RenderSection("PartnerOrg", required: false)
        
        <hr id="hrfooter" />
        <footer>
            <div class="text-center ">       
                <p id="footerinfo" class="common-BodyText">3729 S. Fourth Street | Louisville, KY 40214-1712 | (502)363-1077 | <a href="mailto:Kentuckyhbpa@gmail.com">KentuckyHBPA@gmail.com</a>
            </div>
        </footer>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Content/fontawesome")
    @RenderSection("scripts", required: false)
</body>
</html>

<div id="fb-root"></div>
<script>
    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v2.10";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>